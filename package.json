{
  "name": "4TID-Launcher",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build":{
    "appId": "4TID Launcher",
    "win":{
      "target": ["nsis"],
      "icon":"icon.ico"
    },
    "nsis":{
      "oneClick":true,
      "installerIcon":"icon.ico",
      "uninstallerIcon":"icon.ico",
      "uninstallDisplayName": "4TID Launcher Uninstaller",
      "license":"license.md",
      "allowToChangeInstallationDirectory":false
    },
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": ["**/*"]
      }
    ]
  },
  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vsousa14/FiveM-Server-Launcher.git"
  },
  "author": "SOUSA",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vsousa14/FiveM-Server-Launcher/issues"
  },
  "homepage": "https://github.com/vsousa14/FiveM-Server-Launcher#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "find-process": "^1.4.7",
    "fs": "^0.0.1-security",
    "node-powershell": "^4.0.0",
    "regedit": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^20.1.1",
    "electron-builder": "^24.4.0"
  }
}